<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:padding="20dp" >

    <TextView
        android:id="@+id/landLocTxt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:text="@string/landMarkLoc"
        android:textColor="#000000" />

    <Spinner
        android:id="@+id/spinnerLandMarkLoc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/landLocTxt"
        android:prompt="@string/selectLandmarkLoc" />

    <TextView
        android:id="@+id/NumQuesTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spinnerLandMarkLoc"
        android:layout_below="@+id/spinnerLandMarkLoc"
        android:layout_marginTop="10dip"
        android:text="Number of Questions"
        android:textColor="#000000" />

    <Spinner
        android:id="@+id/spinnerNumQuestions"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spinnerLandMarkLoc"
        android:layout_below="@+id/NumQuesTxt"
        android:prompt="@string/selectNumQuestions" />

    <EditText
        android:id="@+id/etNameDis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spinnerLandMarkLoc"
        android:layout_below="@+id/spinnerNumQuestions"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Enter Your Initials"
        android:maxLength="3"
        android:inputType="textPersonName" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/playGameButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spinnerLandMarkLoc"
        android:layout_below="@+id/etNameDis"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:gravity="center"
        android:padding="10dp"
        android:text="Play Game!"
        android:textSize="20dp" />

    <Button
        android:id="@+id/hsButtondis"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/playGameButton"
        android:layout_below="@+id/playGameButton"
        android:background="@drawable/button"
        android:gravity="center"
        android:padding="10dp"
        android:text="High Score"
        android:textSize="20dp" />

    <Button
        android:id="@+id/howToPlayButtondis"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/hsButtondis"
        android:layout_below="@+id/hsButtondis"
        android:background="@drawable/button"
        android:gravity="center"
        android:padding="10dp"
        android:text="How To Play"
        android:textSize="20dp" />

</RelativeLayout>