<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:padding="20dp">
    
    <LinearLayout
        android:weightSum="100"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
	    <TextView
	        android:layout_weight="80"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5dip"
	        android:textSize="20dp"
	        android:text="Select Grade level"
	    />
	    <Spinner 
	        android:layout_weight="20"
	        android:layout_width="wrap_content"
	        android:layout_height="38dp"
	        android:id="@+id/spinnerGradeLevel"
	        android:prompt="@string/selectGradeLevel"
	    />
	</LinearLayout>
    
    <LinearLayout
        android:weightSum="100"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
	    <TextView
	        android:layout_weight="70"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5dip"
	        android:textSize="20dp"
	        android:text="Number of Questions"
	    />
	    <Spinner 
	        android:layout_weight="30"
	        android:layout_width="wrap_content"
	        android:layout_height="38dp"
	        android:id="@+id/spinnerNumQuestions"
	        android:prompt="@string/selectNumQuestions"
	    />
	</LinearLayout>
    
    
    
    <Button
        android:id="@+id/playGameButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:text="Play Game!"
        android:textSize="20dp" 
        android:gravity="center"
        android:layout_gravity="center" />
    
    <Button
        android:id="@+id/hsButtondis"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:text="High Score"
        android:textSize="20dp" 
        android:gravity="center"
        android:layout_gravity="center" />
    
    <Button
        android:id="@+id/howToPlayButtondid"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:text="How To Play"
        android:textSize="20dp" 
        android:gravity="center"
        android:layout_gravity="center" />

</LinearLayout>